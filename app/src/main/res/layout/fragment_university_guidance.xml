<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <include
        android:id="@+id/includeRel"
        layout="@layout/header_bar_fragment"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/includeRel"
        android:orientation="vertical"
        android:weightSum="100">
        <ImageView
            android:id="@+id/bannerImagePager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:background="@drawable/default_banner"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="70">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:scrollbars="none">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:visibility="visible"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/mailImageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_gravity="right"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/mailiconpe"
                            android:visibility="visible" />

                        <com.mobatia.naisapp.manager.CustomFontSansProTextBlack
                            android:id="@+id/description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_marginLeft="10dp"
                            android:visibility="visible" />

                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/title"
                        android:gravity="center"
                        android:layout_margin="5dp">

                        <RelativeLayout
                            android:id="@+id/essentialRelative"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/sportsbtngreen">
                            <ImageView
                                android:id="@+id/essentialImg"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="3dp"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/guidance_essential"/>
                            <com.mobatia.naisapp.manager.CustomFontSansProTextWhiteWithoutColor
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/essentialImg"
                                android:text="Guidance Essentials"
                                android:textColor="@color/white"
                                android:layout_centerHorizontal="true"/>
                            <com.mobatia.naisapp.manager.CustomFontSansProTextWhiteWithoutColor
                                android:id="@+id/ccaDot"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_margin="5dp"
                                android:background="@drawable/shape_circle_red"
                                android:gravity="center"
                                android:text="100"
                                android:layout_alignParentRight="true"
                                android:textColor="@color/white"
                                android:textSize="8sp"
                                android:visibility="gone" />
                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="100"
                            android:layout_marginTop="5dp"
                            android:layout_below="@+id/essentialRelative"
                            android:orientation="horizontal">
                            <RelativeLayout
                                android:id="@+id/informationRelative"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="50"
                                android:layout_marginRight="2dp"
                                android:background="@drawable/ccabtnorange">
                                <ImageView
                                    android:id="@+id/informationImg"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="6dp"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/information_cca"/>
                                <com.mobatia.naisapp.manager.CustomFontSansProTextWhiteWithoutColor
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/informationImg"
                                    android:text="Information"
                                    android:textColor="@color/white"
                                    android:layout_centerHorizontal="true"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:id="@+id/calendarRelative"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="50"
                                android:layout_marginLeft="2dp"
                                android:background="@drawable/sportsbtnblue">
                                <ImageView
                                    android:id="@+id/calendarImg"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="6dp"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/calendar_sports"/>
                                <com.mobatia.naisapp.manager.CustomFontSansProTextWhiteWithoutColor
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/calendarImg"
                                    android:text="Calendar"
                                    android:textColor="@color/white"
                                    android:layout_centerHorizontal="true"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>